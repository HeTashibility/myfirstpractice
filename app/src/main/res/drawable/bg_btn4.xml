<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_focused="true"> //当我按钮被按压时候要有什么样式
        <shape>
            <solid android:color="#CC7A00"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item
        android:state_focused="false"> //当我按钮被按压时候要有什么样式
        <shape>
            <solid android:color="#AA0033"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
</selector>